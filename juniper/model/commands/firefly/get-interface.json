{
    "endpoint": "netconf",
    "type": "bpprov.runners.simple.Sequence",
    "tests": [
        "commands/tests/show-interfaces.json"
    ],
    "endpoint-parameters": {
        "template": "firefly/filter-interface.tmpl"
    },
    "out-path": [
    ],
    "in-path": [{
        "type": "bpprov.translators.template.Json",
        "parameters": {
            "template": "firefly/get-interface.tmpl",
            "as_object": true
        }
    }, {
        "type": "bpprov.translators.route.Case",
        "parameters": {
            "field": "${link_level_type}",
            "choice": {
                "error": {
                    "type": "bpprov.translators.template.Json",
                    "parameters": {
                        "templateType": "inline",
                        "template": "{\"rpc-error\": {\"error-info\": \"Interface not found\"}}"
                    }
                },
                "virtual": {
                    "type": "bpprov.translators.aggregator.Call",
                    "parameters": {
                        "command": "get-interface.json",
                        "input": {
                            "templateType": "json-dict",
                            "header": {},
                            "data": {
                                "interface": "{{ data.physical_interface }}"
                            }
                        },
                        "output": {
                            "patches": [{
                                "from": "/data/mac_address",
                                "to": "/data/mac_address"
                            }, {
                                "from": "/data/admin_status",
                                "to": "/data/admin_status"
                            }, {
                                "from": "/data/oper_status",
                                "to": "/data/oper_status"
                            }, {
                                "from": "/data/speed",
                                "to": "/data/speed"
                            }]
                        },
                        "error": {
                            "type": "log"  
                        }
                    }
                }
            },
            "otherwise": { "type": "bpprov.translators.list.Null" }
        }
    }]
}
