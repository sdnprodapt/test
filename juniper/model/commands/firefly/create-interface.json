{
    "endpoint": "null",
    "type": "bpprov.runners.simple.Sequence",
    "tests": [
        "commands/tests/show-interfaces.json"
    ],
    "endpoint-parameters": {
    },
    "out-schema": "firefly/out-create-interface.json",
    "out-path": [
    ],
    "in-path": [{
        "type": "bpprov.translators.aggregator.Call",
        "parameters": {
            "command": "create-interface-basic.json",
            "input": {
                "templateType": "json-dict",
                "data": {
                    "interface": "{{ data.name.split('.')[0] }}",
                    "unit": "{{ data.name.split('.')[1] }}",
                    "admin_status": "{{ data.admin_status if 'admin_status' in data else '' }}",
                    "mtu": "{{ data.mtu if 'mtu' in data else '' }}"
                }
            },
            "output": {
                "patches": [{
                    "from": "/data",
                    "to": "/data/interface-results"
                }]
            }
        }
    }, {
        "type": "bpprov.translators.aggregator.Call",
        "parameters": {
            "command": "create-security-zone.json",
            "input": {
                "templateType": "file",
                "data": "firefly/create-security-zone-in.tmpl"
            },
            "output": {
                "patches": [{
                    "from": "/data",
                    "to": "/data/security-zone-results"
                }]
            }
        }
    }, {
        "type": "bpprov.translators.route.Branch",
        "parameters": {
            "choice": [{
                "when": "${interface-results} contains \"rpc-error\"",
                "do": {
                    "type": "bpprov.translators.aggregator.Call",
                    "parameters": {
                        "command": "discard-changes.json",
                        "output": {
                            "patches": [{
                                "from": "/data",
                                "to": "/data/discard-results"
                            }]
                        }
                    }
                }
            }, {
                "when": "${security-zone-results} contains \"rpc-error\"",
                "do": {
                    "type": "bpprov.translators.aggregator.Call",
                    "parameters": {
                        "command": "discard-changes.json",
                        "output": {
                            "patches": [{
                                "from": "/data",
                                "to": "/data/discard-results"
                            }]
                        }
                    }
                }
            }],
            "otherwise": {
                "type": "bpprov.translators.aggregator.Call",
                "parameters": {
                    "command": "commit.json",
                    "input": {
                        "templateType": "json-dict",
                        "data": {}
                    },
                    "output": {
                        "patches": [{
                            "from": "/data",
                            "to": "/data/commit-results"
                        }]
                    }
                }
            }
        }
    }, {
        "type": "bpprov.translators.route.Branch",
        "parameters": {
            "choice": [{
                "when": "${.} contains \"commit-results\"",
                "do": {
                    "type": "bpprov.translators.route.Branch",
                    "parameters": {
                        "choice": [{
                            "when": "${commit-results} contains \"rpc-error\"",
                            "do": {
                                "type": "bpprov.translators.aggregator.Call",
                                "parameters": {
                                    "command": "discard-changes.json",
                                    "output": {
                                        "patches": [{
                                            "from": "/data",
                                            "to": "/data/discard-results"
                                        }]
                                    }
                                }
                            }
                        }]
                    }
                }
            }]
        }
    }, {
        "type": "bpprov.translators.call.Function",
        "parameters": {
            "function": "juniper.firefly.firefly_errors",
            "args": {
                "error_key": "rpc-error",
                "fields": {
                    "commit": "commit-results",
                    "interface": "interface-results",
                    "security-zone": "security-zone-results"
                },
                "errors": ["rpc-error"]
            }
        }
    }]
}
