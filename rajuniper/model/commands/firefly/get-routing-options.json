{
    "endpoint": "netconf",
    "type": "bpprov.runners.simple.Sequence",
    "tests": [
        "commands/firefly/tests/get-routing-options.json"
    ],
    "endpoint-parameters": {
        "template": "firefly/get-routing-options-command.tmpl"
    },
    "out-schema": "firefly/out-get-routing-options.json",
    "out-path": [
        {
            "type": "bpprov.translators.route.Branch",
            "parameters": {
                "choice": [
                    {
                        "when": "${name} == \"\"",
                        "do": {
                            "type": "bpprov.translators.template.Json",
                            "parameters": {
                                "templateType": "inline",
                                "template": "{\"statusCode\": \"404\", \"reason\": \"Virtual Router name not defined\"}"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "in-path": [
        {
            "type": "bpprov.translators.dict.Listify",
            "parameters": {"paths": ["configuration.routing-instances..routing-options.static.route"]}
        },
        {
            "type": "bpprov.translators.template.Json",
            "parameters": {
                "template": "firefly/get-routing-options.tmpl",
                "as_object": false
            }
        },
        {
            "type": "bpprov.translators.route.Branch",
            "parameters": {
                "choice": [
                    {
                        "when": "${.} == \"{}\"",
                        "do": {
                            "type": "bpprov.translators.template.Json",
                            "parameters": {
                                "templateType": "inline",
                                "template": "{\"statusCode\": \"404\", \"reason\": \"Routing options not found\"}"
                            }
                        }
                    }
                ],
                "otherwise": {
                    "type": "bpprov.translators.template.Json",
                    "parameters": {
                        "templateType": "inline",
                        "template": "{{ data }}"
                    }
                }
            }
        }
    ]
}
