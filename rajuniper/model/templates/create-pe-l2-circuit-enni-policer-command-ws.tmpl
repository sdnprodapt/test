<rpc>
<edit-config><target><candidate/></target>
<config><configuration>
<firewall>
    <policer>
        <name>{{data['rate']}}Meg</name>
        <if-exceeding>
         {%- if (data['interfaces'][0]['isENNI'] == True) %}
            <bandwidth-limit>{{data['interfaces'][0]['policer']['cir']}}m</bandwidth-limit>
			{# start changes for SDN-864 #}
            <burst-size-limit>{{data['interfaces'][0]['policer']['cbs']}}</burst-size-limit>
			{# end changes for SDN-864 #}
		{%- endif %}
        </if-exceeding>
        <then>
            <discard/>
        </then>
    </policer>
</firewall>
</configuration></config>
</edit-config>
</rpc>