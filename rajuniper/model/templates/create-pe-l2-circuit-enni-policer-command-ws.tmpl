<rpc>
<edit-config><target><candidate/></target>
<config><configuration>
<firewall>
    <policer>
        <name>{{data['rate']}}Meg</name>
        <if-exceeding>
            <bandwidth-limit>{{data['rate']}}m</bandwidth-limit>
            {%- if data['rate'] <= 100 %}
                <burst-size-limit>64k</burst-size-limit>
            {%- else %}
                <burst-size-limit>128k</burst-size-limit>
            {%- endif %}
        </if-exceeding>
        <then>
            <discard/>
        </then>
    </policer>
</firewall>
</configuration></config>
</edit-config>
</rpc>