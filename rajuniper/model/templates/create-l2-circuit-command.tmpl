<rpc>
<edit-config><target><candidate/></target>
<config><configuration>
    <protocols>
        <l2circuit>
            <neighbor>
                <name>{{ data.properties.neighbor }}</name>
                <interface>
                    <name>{{ data.properties.interface }}</name>
                    {% if data is haspath('properties','description') %}
                    <description>{{ data.properties.description }}</description>
                    {% endif %}
                    <virtual-circuit-id>{{ data['properties']['virtual-circuit-id'] }}</virtual-circuit-id>
                    {% if data is haspath('properties','ignore-mtu-mismatch') and data['properties']['ignore-mtu-mismatch'] %}
                    <ignore-mtu-mismatch/>
                    {% endif %}
                    <encapsulation-type>{{ data['properties']['encapsulation-type'] }}</encapsulation-type>
                    <no-control-word/>
                    <mtu>9216</mtu>
                </interface>
            </neighbor>
        </l2circuit>
    </protocols>
</configuration></config>
</edit-config>
</rpc>